<mvc:View
    controllerName="layouts.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page1"
        title="{i18n>title}"
        class="mybackgroundcolor"
    >
        <content>
            <FlexBox
                id="flexBox1"
                justifyContent="Center"
                alignItems="Center"
                height="100%"
            >
                <VBox id="_IDGenVBox">
                    <!-- <Label id="_IDGenLabel" text="LOGIN" design="Bold"></Label> -->
                    <Label
                        id="_IDGenLabel1"
                        text="Username"
                        design="Bold"
                        class="sapUiSmallMarginTop mytextcolor mytextfont"
                    />
                    <Input
                        id="_IDGenInput"
                        width="400px"
                    />
                    <Label
                        id="_IDGenLabel2"
                        text="Password"
                        design="Bold"
                        class="mytextcolor mytextfont"
                    />
                    <Input
                        id="_IDGenInput1"
                        width="400px"
                        type="Password"
                    />
                    <Button
                        id="_IDGenButton1"
                        text="Login"
                        width="400px"
                        type="Emphasized"
                    />
                </VBox>
            </FlexBox>

    <f:SimpleForm id="_IDGenSimpleForm" title="Employee Information" editable="true" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" emptySpanL="0" emptySpanM="0">
        <f:content>
            <core:Title id="_IDGenTitle1" text="Basic Information"></core:Title>
            <Label id="_IDGenLabel" text="Employee ID" required="true"></Label>
            <Input id="empIDIn" value="{/empId}" ></Input>
            <Label id="_IDGenLabel3" text="Employee Name" required="true"></Label>
            <Input id="empName" value="{/empName}"></Input>
            <Label id="_IDGenLabel4" text="Employee Designation" required="true"></Label>
            <Input id="empDes" value="{/empDesig}"></Input>
            <Label id="_IDGenLabel5" text="Employee Skill" required="true"></Label>
            <Input id="empSkill" value="{/empSkill}"></Input>
            <core:Title id="_IDGenTitle2" text="Contract Information"></core:Title>
            <Label id="_IDGenLabel6" text="Employee Email" required="true"></Label>
            <Input id="empEmail" value="{/empEmail}"></Input>
            <Label id="_IDGenLabel7" text="Employee Phone" required="true"></Label>
            <Input id="empPhone" value="{/empPhone}"></Input>
        </f:content>
        </f:SimpleForm>
                    <Button
                        id="_IDGenButton"
                        text="Preview"
                        press="onSubmit"
                        type="Emphasized"
                    />
        </content>
    </Page>
</mvc:View>
